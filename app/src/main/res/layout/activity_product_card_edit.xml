<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProductCardEditActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_inst"
    android:gravity="center"
    android:paddingStart="24dp"
    android:paddingTop="10dp"
    android:paddingEnd="24dp"
    android:paddingBottom="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--................................................................................................-->
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="@string/product_name"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:hint="@string/tyre"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"  />

            <TextView
                android:id="@+id/tv_man_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="@string/man_hours"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_man_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:hint="@string/_00_00_hrs"
                android:inputType="time"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"  />

            <TextView
                android:id="@+id/tv_complexity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="@string/complexity"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_complexity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:hint="@string/input"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"  />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="@string/currency"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--  <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/box_gradient"
                  android:orientation="vertical"
                  android:layout_margin="10dp">

                  <Spinner
                      android:id="@+id/currency_spinner"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="8dp"
                      />
              </LinearLayout>-->

            <Spinner
                android:id="@+id/currency_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/tv_service_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="@string/service_charge"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_service_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"  />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="@string/description"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:hint="@string/something_about_product"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"  />

            <TextView
                android:id="@+id/tv_service_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="@string/service_date"
                android:textColor="@color/login_form_details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_service_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_inst"
                android:hint="@string/dd_mm_yyyy"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"  />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_inst"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/login_form_details_medium" />
            <!--................................................................................................-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

