    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.AddServiceCenterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_inst"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingTop="10dp"
        android:paddingEnd="24dp"
        android:paddingBottom="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_center_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/service_center_photo"
                        android:textColor="@color/login_form_details"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/center_photo_iv"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorAccent"
                        android:src="@drawable/placeholder"/>


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_center_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/service_center_name"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_center_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_et_inst"
                    android:hint="@string/auto_center"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/login_form_details"
                    android:textColorHint="@color/login_form_details" />

                <TextView
                    android:id="@+id/tv_select_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/select_country"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/select_country_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_et_inst"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/state"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/select_state_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_et_inst"
                    android:visibility="gone"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_state_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_et_inst"
                    android:text="@string/select_country_first"
                    android:textColor="@color/colorBlack"
                    android:padding="12dp"
                    android:textColorHint="@color/login_form_details"  />

                <TextView
                    android:id="@+id/tv_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/city"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/select_city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/bg_et_inst"
                    android:padding="10dp" />


                <TextView
                    android:id="@+id/tv_city_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_et_inst"
                    android:text="@string/select_state_first"
                    android:textColor="@color/colorBlack"
                    android:padding="12dp"
                    android:textColorHint="@color/login_form_details"  />

                <TextView
                    android:id="@+id/tv_physical_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/address"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_physical_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_et_inst"
                    android:hint="@string/h_no"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/login_form_details"
                    android:textColorHint="@color/login_form_details" />

                <TextView
                    android:id="@+id/tv_location_pick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/location"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_et_inst"
                        android:hint="@string/latitude_longitude"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_picker"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:padding="3dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/ic_picker"
                        android:layout_weight="0"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="@string/phone_number"
                    android:textColor="@color/login_form_details"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_country_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="@color/login_form_details"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_et_inst"
                        android:hint="@string/_0000xxxxxx"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:layout_weight="0"
                        android:padding="10dp"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_alt_number"
